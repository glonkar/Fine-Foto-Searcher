<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.azurespot.gridimagesearch"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_owl"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name="org.azurespot.gridimagesearch.SearchActivity"
            android:label="@string/app_name">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.azurespot.gridimagesearch.ImageDisplayActivity"
            android:label="@string/title_activity_image_display" >
        </activity>

        <activity
            android:name="org.azurespot.gridimagesearch.AdvancedOptionsActivity"
            android:label="@string/title_activity_advanced_options" >
        </activity>
    </application>

</manifest>
